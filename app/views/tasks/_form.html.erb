<%= form_with(model: task) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :deadline_at %>
    <%= form.datetime_select :deadline_at %>
  </div>

  <div class="field">
    <%= form.label :project_id %>
    <%= form.select :project_id, Project.all.pluck(:name, :id) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>